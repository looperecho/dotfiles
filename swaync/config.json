{
    "positionX": "right",
    "positionY": "top",
    "cssPriority": "user",

    "control-center-width": 480,
    "control-center-height": 1140, 
    "control-center-margin-top": 2,
    "control-center-margin-bottom": 1,
    "control-center-margin-right": 2,
    "control-center-margin-left": 0,

    "notification-window-width": 480,
    "notification-icon-size": 32,
    "notification-body-image-height": 160,
    "notification-body-image-width": 200,

    "timeout": 4,
    "timeout-low": 2,
    "timeout-critical": 6,

    "fit-to-screen": false,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": true,
    "script-fail-notify": true,
    "scripts": {},

    "notifications": {
        "ignored-apps": [
            "ibus",
            "ibus-daemon",
            "spotify"
        ]
    },
    
    "notification-group-icon": {
        "visible": "false"
    },

    "notification-visibility": {
        "spotify": {
            "state": "muted",
            "urgency": "Low",
            "app-name": "spotify"
        },
        "ibus": {
            "state": "ignored",
            "app-name": "ibus"
        }
    },

    "widgets": [
        "buttons-grid",
        "notifications"
    ],

    "widget-config": {
        "title": {
            "text": "Control Center",
            "clear-all-button": false,
            "button-text": ""
        },
        "label": {
            "max-lines": 1,
            "text": ""
        },
        "buttons-grid": {
            "actions": [
                {
                    "label": "󰽥",
                    "type": "toggle",
                    "active": false,
                    "command": "swaync-client -d -sw"
                },
                {
                    "label": "",
                    "type": "toggle",
                    "active": false,
                    "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && rfkill unblock bluetooth || rfkill block bluetooth'",
                    "update-command": "sh -c '[[ $(rfkill list bluetooth | rg \"Soft blocked: no\") ]] && echo true || echo false'"
                },
                {
                    "label": "",
                    "type": "toggle",
                    "active": false,
                    "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
                    "update-command": "sh -c '[[ $(nmcli radio wifi) == \"enabled\" ]] && echo true || echo false'"
                },
                {
                    "label": "",
                    "type": "button",
                    "command": "pavucontrol"
                }

            ]
        }
    }
}
