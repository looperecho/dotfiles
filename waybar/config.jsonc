// Waybar Config

// ────────
// GENERAL
// ────────
{
    "layer": "top",
    "position": "top",
    "spacing": 0,
    "margin": "0",

    // Load Modules
    // ────────
    "include": [
        "~/.config/waybar/modules/builtin.jsonc",
        "~/.config/waybar/modules/custom.jsonc"
    ],   
    
    // Module Layout
    // ────────
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],

    "modules-center": [
        "mpris"
    ],

    "modules-right": [
        "temperature#cpu",
        "custom/gpu-temp",
        "group/tray",
        "privacy",
        "group/audio",
        "bluetooth",
        "custom/ibus",
        "group/datetime",
        "custom/notification"
    ]
}
